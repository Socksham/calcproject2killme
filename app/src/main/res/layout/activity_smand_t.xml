<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SMandT">

    <TextView
        android:id="@+id/titleScreenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif-monospace"
        android:gravity="center_horizontal"
        android:text="@string/welcome_to_story_mode"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/instructionLabelOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/would_you_like_to_go_to_the_tutorial_first"
        android:textColor="@color/white"
        android:fontFamily="serif-monospace"
        android:textSize="25sp"
        android:layout_below="@id/titleScreenLabel"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/tutorialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_custom_button"
        android:text="@string/tutorial"
        android:textAllCaps="false"
        android:textSize="27sp"
        android:minWidth="125dp"
        android:layout_marginStart="30dp"
        android:layout_below="@id/instructionLabelOne"
        android:layout_marginTop="135dp"/>

    <Button
        android:id="@+id/storyModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorialButton"
        android:layout_marginStart="230dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/main_custom_button"
        android:minWidth="150dp"
        android:text="@string/story_mode"
        android:textAllCaps="false"
        android:textSize="27sp" />

    <ImageView
        android:id="@+id/arrowTutorial"
        android:layout_width="86dp"
        android:layout_height="91dp"
        android:layout_below="@id/instructionLabelOne"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/tutorial_button_arrow"
        android:contentDescription="@string/tutorial_label" />

    <TextView
        android:id="@+id/tutorialLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here_for_a_tutorial"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="serif-monospace"
        android:layout_below="@id/instructionLabelOne"
        android:layout_marginStart="150dp"
        android:layout_marginTop="52dp"/>

    <ImageView
        android:id="@+id/arrowStoryMode"
        android:layout_width="86dp"
        android:layout_height="91dp"
        android:background="@drawable/story_mode_button"
        android:layout_below="@id/storyModeButton"
        android:layout_marginStart="287dp"
        android:contentDescription="@string/storymodelabel"/>

    <TextView
        android:id="@+id/storyModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here_to_play_the_story"
        android:textColor="@color/white"
        android:fontFamily="serif-monospace"
        android:textSize="17sp"
        android:layout_below="@id/storyModeButton"
        android:layout_marginTop="58dp"/>

</RelativeLayout>